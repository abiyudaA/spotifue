<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Profile - Spotifue</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css"
    />
  </head>
  <body class="bg-gray-900 text-white h-screen flex items-center justify-center">
    <div class="bg-gray-800 p-12 rounded-lg shadow-lg w-2/5 text-center">
      <img
        src="<%= getProfile.profilePicture %>"
        alt="Profile Picture"
        class="w-32 h-32 rounded-full mx-auto mb-6"
      />
      <% if (deleted) { %>
        <h2>song with title <%= deleted %> has been deleted!!</h2>
       
      <% } %>
      <h2 class="text-3xl font-bold"><%= getProfile.profileName %></h2>
      <p class="text-gray-400 mb-6 text-lg"><%= getProfile.bio %></p>
      <% songs.forEach(s => { %>
        <li class="p-2 bg-gray-700 rounded cursor-pointer hover:bg-gray-600">
          <div class="bg-gray-700 rounded-lg p-4 flex items-center space-x-4">
            <img
            src="/uploads/<%= s.songImage %>"
            alt=""
            class="w-16 h-16 rounded-full"
            />
            <div class="content" style="justify-content: center;">
              <h3 class="font-bold text-sm" >Title: <%= s.title %> </h3>
              <h3 class="font-bold text-sm"> </h3>
              <h3 class="font-bold text-sm"> Duration: <%= s.minutes %> </h3>
            </div>
          </div>
          <a href="/home/delete/<%= s.id %>" id="">
            <button>Delete</button>
          </a>
        </li>
        <br>
        <% }) %>
        
        <!-- <%= JSON.stringify(songs) %> -->
      <a
        href="/profile/edit"
        class="bg-blue-600 text-white px-2 py-1 rounded text-xs"
      >
        Edit
      </a>

        <a
          href="/home/add"
          class="bg-blue-600 text-white px-2 py-1 rounded text-xs"
        >
          Add Song
        </a>
        
      <a
        href="/home"
        class="text-gray-400 hover:text-white text-xs ml-2"
      >
        Home
      </a>
    </div>
  </body>
</html>
