<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Spotifue</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css">
</head>

<body class="bg-gray-900 text-white h-screen flex overflow-hidden">
    
    <!-- Sidebar (Your Library) -->
    <aside class="w-64 bg-gray-800 p-4 flex flex-col">
        <h2 class="text-lg font-bold mb-4">Your Library</h2>
        <ul class="space-y-2 overflow-auto flex-grow">
            
                <li class="p-2 bg-gray-700 rounded cursor-pointer hover:bg-gray-600">
                    <h2> ini sebenernya untuk playslist </h2>
                </li>
    
        </ul>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-6 overflow-auto">
        <!-- Search Bar & Navigation -->
        <div class="flex justify-between items-center mb-6">
            <form action="/home" method="get">

                <input type="text" placeholder="What do you want to play?" 
                    class="w-1/2 p-2 rounded bg-gray-700 text-white placeholder-gray-400" name="title" >
                <button type="submit">Search</button>
            </form>
                
            
            <div class="text-lg font-medium">
                <img src="<%= profilePicture %>" alt="<%= name %>">
            </div>
        </div>
        
        <!-- Music Categories -->
        <!-- Explore Genres -->
        <h2 class="text-xl font-bold mb-4">Explore Your Genres</h2>
        <div class="flex space-x-4 mb-6">
            <button class="bg-gray-700 px-4 py-2 rounded-full"><a href="/home">All</a></button>
            <% genres.forEach(g => { %>
            <button class="bg-gray-700 px-4 py-2 rounded-full" ><a href="<%= `/home?GenreId=${g.id}` %>"><%= g.name %></a></button> 
            
           <% }) %>
        </div>

        <!-- Recently Played -->
        <h2 class="text-xl font-bold mb-4">Play</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
            <% songs.forEach(song => { %>
                <div class="bg-gray-800 p-4 rounded-lg cursor-pointer">
                    <img src="<%= song.songImage %>" alt="<%= song.title %>">
                    <h3 class="font-bold"><%= song.title %></h3>
                    <p class="text-sm text-gray-400"><%= song.User.Profile.profileName %></p>
                    <p class="text-sm text-gray-400"><%= song.Genre.name %></p>
                </div>
            <% }) %>
        </div>

        
    </main>

    
    <!-- Footer: Now Playing / Song Details -->
    <footer class="w-full bg-gray-800 p-4 fixed bottom-0 flex items-center justify-between">
        <div class="flex items-center space-x-4">
            <!-- Album Art -->
            <img src="https://prcfindonesia.org/wp-content/uploads/2021/08/Bekantan.jpg" class="w-16 h-16 rounded-full">
            <div class="flex flex-col">
                <h3 class="font-bold">Wak Wuw</h3>
                <p class="text-sm text-gray-400">The Weeknd feat. Daft Punk</p>
            </div>
        <div>   
       <!-- Audio Player Section -->
    <div class="fixed bottom-0 left-0 right-0 bg-gray-800 p-4 flex items-center justify-center shadow-lg">
        <audio id="audioPlayer" controls style="width: 100%; max-width: 400px;">
            <source src="your-audio-file.mp3" type="audio/mpeg">
            Your browser does not support the audio element.
        </audio>
    </div>

    </footer>
    
</body>
</html>

