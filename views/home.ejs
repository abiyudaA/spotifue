<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home - Spotifue</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css"
    />
  </head>

  <body class="bg-gray-900 text-white h-screen flex overflow-hidden">
    <!-- Sidebar (Your Library) -->
    <aside class="w-64 bg-gray-800 p-4 flex flex-col">
      <h2 class="text-lg font-bold mb-4">Your Library</h2>
      <ul class="space-y-2 overflow-auto flex-grow">
        <!-- Artist Cards -->
        <h1>artist card</h1>
        <li class="p-2 bg-gray-700 rounded cursor-pointer hover:bg-gray-600">
          <div class="bg-gray-700 rounded-lg p-4 flex items-center space-x-4">
            <img
              src="https://prcfindonesia.org/wp-content/uploads/2021/08/Bekantan.jpg"
              alt=""
              class="w-16 h-16 rounded-full"
            />
            <div>
              <h3 class="font-bold text-sm"></h3>
            </div>
          </div>
        </li>
      </ul>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-6 overflow-auto">
      <!-- Search Bar & Navigation -->
      <div class="flex justify-between items-center mb-6">
        <form action="/home" method="get" class="flex w-full">
          <input
            type="text"
            placeholder="What do you want to play?"
            class="w-3/4 p-2 rounded bg-gray-700 text-white placeholder-gray-400 mr-2"
            name="title"
          />
          <button
            type="submit"
            class="bg-blue-600 text-white p-2 rounded w-auto"
          >
            Search
          </button>
        </form>

        <div class="text-lg font-medium flex items-center space-x-4 relative">
          <img
            src="<%= profilePicture %>"
            alt="<%= name %>"
            class="w-10 h-10 rounded-full"
          />
          <span><%= name %></span>
          <!-- Log Out Button -->
          <button
            class="text-sm bg-red-600 text-white p-1 rounded-full mt-2"
            onclick="window.location.href='/logout'"
          >
            Log Out
          </button>
        </div>
      </div>

      <!-- Music Categories -->
      <h2 class="text-xl font-bold mb-4">Explore Your Genres</h2>
      <div class="flex space-x-4 mb-6">
        <button class="bg-gray-700 px-4 py-2 rounded-full">
          <a href="/home">All</a>
        </button>
        <% genres.forEach(g => { %>
        <button class="bg-gray-700 px-4 py-2 rounded-full">
          <a href="<%= `/home?GenreId=${g.id}` %>"><%= g.name %></a>
        </button>
        <% }) %>
      </div>

      <!-- Recently Played -->
      <h2 class="text-xl font-bold mb-4">Recently Played</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
        <% songs.forEach(song => { %>
        <div
          class="bg-gray-800 p-4 rounded-lg cursor-pointer"
          onclick="playSong('<%= song.songURL %>', '<%= song.title %>', '/uploads/<%= song.songImage %>')"
        >
          <img
            src="/uploads/<%= song.songImage %>"
            alt="<%= song.title %>"
            class="w-full h-48 object-cover rounded mb-2"
          />
          <h3 class="font-bold"><%= song.title %></h3>
          <p class="text-sm text-gray-400">
            <%= song.User.Profile.profileName %>
          </p>
          <p class="text-sm text-gray-400"><%= song.Genre.name %></p>
        </div>
        <% }) %>
      </div>
    </main>

    <!-- Footer: Now Playing / Song Details -->
    <footer
      class="w-full bg-gray-800 p-4 fixed bottom-0 left-0 right-0 flex items-center justify-between"
    >
      <div class="flex items-center space-x-4">
        <img
          id="nowPlayingImage"
          src="https://static6.depositphotos.com/1067236/577/i/450/depositphotos_5773905-stock-photo-blue-3d-question-mark.jpg"
          class="w-16 h-16 rounded-full"
        />
        <div class="flex flex-col">
          <h3 id="nowPlayingTitle" class="font-bold"></h3>
          <p id="nowPlayingArtist" class="text-sm text-gray-400">
            
          </p>
        </div>
      </div>

      <!-- Audio Player Section -->
      <div
        class="flex flex-col items-center justify-center w-full max-w-3xl mx-auto mt-4"
      >
        <audio id="audioPlayer" controls class="w-full">
          <source id="audioSource" type="audio/mpeg" />
          Your browser does not support the audio element.
        </audio>
      </div>
    </footer>

    <script>
      // Function to dynamically update the audio source and song details
      function playSong(songURL, songTitle, songImage) {
        const audioPlayer = document.getElementById("audioPlayer");
        const audioSource = document.getElementById("audioSource");
        const nowPlayingTitle = document.getElementById("nowPlayingTitle");
        const nowPlayingArtist = document.getElementById("nowPlayingArtist");
        const nowPlayingImage = document.getElementById("nowPlayingImage");

        // Update the audio source
        audioSource.src = "/uploads/" + songURL;
        audioPlayer.load(); // Reload the audio player with the new source
        audioPlayer.play(); // Play the selected song

        // Update song details
        nowPlayingTitle.textContent = songTitle;
        nowPlayingArtist.textContent = "<%= name %>"; // Update artist name if needed dynamically
        nowPlayingImage.src = songImage;
      }
    </script>
  </body>
</html>
