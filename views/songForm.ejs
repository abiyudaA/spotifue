<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Song</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-900 text-white">
    <!-- Song Form Container -->
    <div class="flex justify-center items-center h-screen">
      <div class="bg-gray-800 p-8 rounded-lg shadow-lg w-11/12 md:w-1/2">
        <!-- Form Title -->
        <h2 class="text-3xl font-bold mb-6 text-center text-blue-500">
          Add New Song
        </h2>

        <!-- Form -->
        <form action="/home/add" method="POST" enctype="multipart/form-data">
          <!-- Song Title -->
          <div class="mb-4">
            <label for="title" class="block text-sm font-medium text-gray-300"
              >Song Title</label
            >
            <input
              type="text"
              id="title"
              name="title"
              class="w-full p-3 mt-2 rounded-lg bg-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
              placeholder="Enter song title"
              required
            />
          </div>

          <!-- Duration -->
          <div class="mb-4">
            <label
              for="duration"
              class="block text-sm font-medium text-gray-300"
              >Duration (in seconds)</label
            >
            <input
              type="number"
              id="duration"
              name="duration"
              class="w-full p-3 mt-2 rounded-lg bg-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
              placeholder="Enter song duration"
              required
            />
          </div>

          <!-- Genre -->
          <div class="mb-4">
            <label for="genre" class="block text-sm font-medium text-gray-300"
              >Genre</label
            >
            <select
              id="GenreId"
              name="GenreId"
              class="w-full p-3 mt-2 rounded-lg bg-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
              required
            >
              <option value="" disabled selected>Select Genre</option>
              <option value="1">Pop</option>
              <option value="3">Funk</option>
              <option value="2">Jazz</option>
              <option value="4">Metal</option>
              <option value="5">PodCast</option>
            </select>
          </div>

          <!-- Song Image -->
          <div class="mb-4">
            <label
              for="songImage"
              class="block text-sm font-medium text-gray-300"
              >Song Image</label
            >
            <input
              type="file"
              id="songImage"
              name="songImage"
              accept="image/*"
              class="w-full p-3 mt-2 rounded-lg bg-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
              required
            />
          </div>

          <!-- Song URL (MP3 file) -->
          <div class="mb-4">
            <label for="songURL" class="block text-sm font-medium text-gray-300"
              >Song URL (MP3 file)</label
            >
            <input
              type="file"
              id="songURL"
              name="songURL"
              accept=".mp3"
              class="w-full p-3 mt-2 rounded-lg bg-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
              required
            />
          </div>

          <!-- Submit Button -->
          <div class="flex justify-center">
            <button
              type="submit"
              class="bg-blue-600 hover:bg-blue-500 text-white py-3 px-8 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300"
            >
              Add Song
            </button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
